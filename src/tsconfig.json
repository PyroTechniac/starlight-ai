{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../dist",
        "rootDir": ".",
        "baseUrl": ".",
        "composite": true,
        "jsx": "react",
        "jsxFactory": "EmbedJsx.make",
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"importHelpers": true,
		"noImplicitOverride": true
    },
    "include": [
        ".",
        "./**/*.json"
    ],
    "exclude": [
        "./tsconfig.json"
    ]
}
